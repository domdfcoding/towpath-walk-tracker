{
    "env": {
        "browser": true
    },
	"root": true,

	"plugins": ["@typescript-eslint"],
    "extends": [
        "standard",
        "eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": [2, "always"],
        "no-throw-literal": 0,
        "indent": ["error", "tab"],
        "no-tabs": 0
    },

    "overrides": [
		{
			"files": ["towpath_walk_tracker/static/js/walk_form.js"],
			"rules": {
                "semi": [2, "always"],
                "no-throw-literal": 0,
                "indent": ["error", "tab"],
                "no-tabs": 0,
                "camelcase": 0,
                "no-sequences": 0,
                "@typescript-eslint/no-unused-expressions": 0
            }
		},
        {
			"files": ["**/*.ts"],
            "parser": "@typescript-eslint/parser",
            "parserOptions": {
                "ecmaVersion": 12,
                "sourceType": "module",
                "project": ["./tsconfig.json"]
            }
			
		}
	]
}
