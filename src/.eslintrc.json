{
    "env": {
        "browser": true
    },
	"root": true,

	"plugins": ["@typescript-eslint"],
    "extends": [
        "standard",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended"
    ],
	"parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": ["./tsconfig.json"]
    },
    "rules": {
        "semi": [2, "always"],
        "no-throw-literal": 0,
        "indent": ["error", "tab"],
        "no-tabs": 0
    }
}
