{# <span class="text-muted">(Optional)</span> #}
<form class="needs-validation" novalidate>
    {# method="POST"
      action="{{ url_for('walk') }}" #}
    {{ form.csrf_token }}
    <div class="row g-3">
        <div class="col-12">
            {{ form.title.label(class_='form-label') }}
            {{ form.title(class_='form-control') }}
        </div>

        <div class="col-sm-8">
            {{ form.start.label(class_='form-label') }}
            {{ form.start(class_='form-control') }}
        </div>

        <div class="col-sm-4">
            {{ form.duration.label(class_='form-label') }}
            {{ form.duration(class_='form-control') }}
        </div>

        <div class="col-12">
            {{ form.notes.label(class_='form-label') }}
            {{ form.notes(class_='form-control') }}
        </div>

        <label class="form-label">Points</label>
        <div class="walk-points-scroll">
            <table class="walk-points">
                {% for idx, point in enumerate(form.points) %}
                    <tr id="points-{{ idx }}">
                        <th class="point-idx">
                            <div class="input-group">
                                <span class="input-group-text">{{ idx }}</span>
                            </div>
                        </th>
                        <td>
                            <div class="input-group has-validation">
                                {{ point.latitude(class_='form-control point-latitude') }}
                                <span class="input-group-text">° N</span>
                                <div class="invalid-feedback">A value is required.</div>
                            </div>
                        </td>
                        <td>
                            <div class="input-group has-validation ">
                                {{ point.longitude(class_='form-control point-longitude') }}
                                <span class="input-group-text">° E</span>
                                <div class="invalid-feedback">A value is required.</div>
                            </div>
                        </td>
                        <td class="d-none">{{ point.enabled(class_='form-control point-enabled') }}</td>
                        <td class="h-100">
                            <button class="h-100 w10 btn btn-danger btn-sm point-delete"
                                    id="points-{{ idx }}-delete"
                                    type="button">
                                <i class="fa-solid fa-trash-can"></i>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

    <button class="w-100 btn btn-primary btn-lg" type="submit">Save Walk</button>
    {# <input type="submit" value="Go"> #}
</form>

<script src="/static/walk_form.js"></script>
<script src="/static/bootstrap_form_validator.js"></script>


